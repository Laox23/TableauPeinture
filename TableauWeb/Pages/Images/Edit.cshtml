@page
@model TableauWeb.Images.EditModel

    <div class="container-fluid">
        <a asp-page="Index">
            <i class="fa fa-arrow-left" aria-hidden="true"></i> Retour
        </a>
    </div>

<div class="container-fluid">
    <div class="jumbotron">
        <form method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <img src="@Model.Image.UrlAffichage" class="img-responsive" asp-append-version="true" />
            </div>

            <div class="form-group">
                <label asp-for="Image.Nom" class="control-label"></label>
                <input asp-for="Image.Nom" class="form-control" />
                <span asp-validation-for="Image.Nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image.MaxImpression" class="control-label">Nom d'impression maximum</label>
                <input asp-for="Image.MaxImpression" class="form-control" />
                <span asp-validation-for="Image.MaxImpression" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image.EstActif" class="control-label">Actif </label>
                <input type="checkbox" asp-for="Image.EstActif" />
            </div>

            <input type="hidden" asp-for="Image.ImageTableauId" />

            <div class="float-right">
                <button class="btn ml-auto"><i class="fa fa-pencil" aria-hidden="true"></i> Modifier</button>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}