@page
@model TableauWeb.Images.IndexModel

<div class="container-fluid">
    <a asp-page="/Tableaux/Index">
        <i class="fa fa-arrow-left" aria-hidden="true"></i> Retour
    </a>
    <a asp-page="Create" class="float-right">
        <i class="fa fa-plus" aria-hidden="true"></i> Nouveau
    </a>
</div>

<div class="container-fluid">
    <div class="jumbotron">
        <table class="table table-hover table-striped">
            <tbody>
                @foreach (var item in Model.Images)
                {
                <tr>
                    <td>
                        <div class="row justify-content-around">
                            <img src="@item.UrlAffichage" class="img-fluid" asp-append-version="true" />
                        </div>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nom)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaxImpression)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.ImageTableauId">
                            <i class="fa fa-pencil" aria-hidden="true"></i>
                        </a> |
                        <a asp-page="./Delete" asp-route-id="@item.ImageTableauId">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>